{
  "compilerOptions": {
    "target": "ES6", // Ou outra versão que você deseje
    "module": "commonjs", // Ajuste conforme seu ambiente
    "outDir": "./dist", // Saída da compilação
    "rootDir": "./src", // Diretório de entrada
    "strict": true, // Habilita todas as verificações de tipo rigorosas
    "esModuleInterop": true, // Interoperabilidade com módulos ES
    "skipLibCheck": true // Ignora a verificação de tipos de arquivos de declaração
  },
  "include": ["src/**/*"], // Inclui apenas arquivos na pasta src
  "exclude": ["node_modules", "dist"] // Exclui node_modules e dist
}
